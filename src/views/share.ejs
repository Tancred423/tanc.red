<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Share</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/favicon.webp" type="image/x-icon">
    <style>
        body {
            background-color: #1e1f22;
            display: flex;
            flex-wrap: wrap;
            font-family: sans-serif;
        }

        a {
            align-items: center;
            border-radius: 10px;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            margin: 10px;
            padding: 10px;
            text-align: center;
            text-decoration: none;
        }

        a:hover {
            background-color: #2b2d31;
        }

        img,
        video {
            border-radius: 10px;
            margin-bottom: 5px;
            max-height: 300px;
            max-width: 300px;
        }

        img.file-icon {
            max-height: 150px;
            max-width: 150px;
        }

        @media (prefers-color-scheme: light) {
            body {
                background-color: white;
            }

            a {
                color: black;
            }

            a:hover {
                background-color: #eaeaea;
            }
        }
    </style>
</head>

<body>
    <% for (const file of files) { 
        if (file === '.gitkeep') continue;
        %>

    <a href="/share/<%= file %>">
        <% if (file.endsWith('.txt')) { %>
        <img src="txt-file.png" class="file-icon" alt="TXT file">
        <% } else if (file.endsWith('.mp3')) { %>
        <img src="mp3-file.png" class="file-icon" alt="MP3 file">
        <% } else if (file.endsWith('.mp4')) { %>
        <video src="/share/<%= file %>"></video>
        <% } else if (file.endsWith('.zip')) { %>
        <img src="zip-file.png" class="file-icon" alt="ZIP file">
        <% } else if (file.endsWith('.pdf')) { %>
        <img src="pdf-file.png" class="file-icon" alt="PDF file">
        <% } else if (file.endsWith('.jpg') || file.endsWith('.jpeg') || file.endsWith('.png') || file.endsWith('.gif')) { %>
        <img src="/share/<%= file %>" alt="preview"></img>
        <% } else { %>
        <img src="unknown-file.png" class="file-icon" alt="Unknown file">
        <% } %>
        <%= file %>
    </a>

    <% } %>
</body>

</html>